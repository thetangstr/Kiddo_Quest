rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own data and allow reading all users for admin features
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Child profiles can be read and written by the parent who created them
    match /childProfiles/{profileId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Quests can be read and written by the parent who created them
    match /quests/{questId} {
      allow read, write, create: if request.auth != null;
    }
    
    // Rewards can be read and written by the parent who created them
    match /rewards/{rewardId} {
      allow read, write, create: if request.auth != null;
    }
    
    // Quest completions can be read and written by any authenticated user
    match /questCompletions/{completionId} {
      allow read, write, create, delete: if request.auth != null;
    }
    
    // Feedback reports can be submitted by any authenticated user
    // and viewed by the admin (thetangstr@gmail.com)
    match /feedbackReports/{reportId} {
      allow create: if request.auth != null;
      allow read, write, update: if request.auth != null;
    }
    
    // Invitations can be created and viewed by the admin
    match /invitations/{invitationId} {
      allow create, read, write, update: if request.auth != null;
    }
    
    // User activity tracking
    match /userActivity/{userId} {
      allow create, read, write, update: if request.auth != null;
    }
  }
}
